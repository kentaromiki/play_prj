# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /create                     controllers.HomeController.create
GET     /top                        controllers.HomeController.top
GET     /item/detail/:id            controllers.HomeController.detail(id: Long)
GET     /item/edit/:id              controllers.HomeController.edit(id: Long)

GET     /item/delete/:id              controllers.HomeController.delete(id: Long)

POST   /uploaded                     controllers.HomeController.uploaded

POST   /create/save                controllers.HomeController.save
POST   /create/update              controllers.HomeController.update

POST    /item                    controllers.ItemController.insert
PUT     /item/:id                controllers.ItemController.update(id: Long)
DELETE  /item/:id                controllers.ItemController.delete(id: Long)
GET     /item/:id                controllers.ItemController.select(id: Long)
GET     /item                    controllers.ItemController.selectAll
POST    /upload/:id                  controllers.ItemController.upload(id: Long)

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
